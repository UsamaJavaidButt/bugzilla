<h1> USERS ADDED</h1>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<table class="table table-sm table-striped ml-4" style="max-width: 50rem;">
  <thead>
    <th>Users Name</th>
    <th>Type </th>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @users_added.each do |user|%>
      <tr>
        <td><%=user.name %></td>
        <td><%=user.user_type %></td>
        <% if current_user.user_type=="Manager" %>
          <td><%= link_to "Remove" , project_user_remove_user_path(@project.id, user.id),:class=>"btn btn-outline-primary"%></td>
        <% end %>
      </tr>
    <% end%>
  </table>
  <h1> ALL USERS </h1>
  <table class="table table-sm table-striped ml-4" style="max-width: 50rem;">
    <thead>
      <th>Users Name</th>
      <th>Type </th>
      <% if current_user.user_type=="Manager" %>
        <th>Assign Users</th>
      <% end %>
      <tr>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <% @users_not_added.each do |user|%>
        <tr>
          <td><%=user.name %></td>
          <td><%=user.user_type %></td>
          <% if current_user.user_type=="Manager" %>
            <td><%= link_to "Add to project" , project_user_add_user_path(@project.id, user.id),:class=>"btn btn-outline-primary"%></td>
          <% end %>
        </tr>
      <% end%>
    </tbody>
  </table>
  <%= link_to "Back", projects_path,:class=>"btn btn-outline-primary"%>
